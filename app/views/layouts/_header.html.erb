<header class="navbar navbar-fixed-top">
<!-- header class="navbar navbar-fixed-top navbar-inverse" -->
	<div class="navbar-inner">
		<div class="container">
			<% if current_user %>
				<%= link_to "muse", current_user, id: "logo" %>
			<% else %>
				<%= link_to "muse", root_path, id: "logo" %>
			<% end %>
			<nav>
				<% if current_user %>
				<ul class="nav pull-left">
					<li class="menu_icon"><%= link_to current_user do %>
						<i class="icon-home icon-large"></i>
						<% end %>
					</li>
					<li class="menu_icon"><%= link_to favorites_user_path(current_user) do %>
						<i class="icon-heart icon-large"></i>
						<% end %>
					</li>
					<li class="menu_icon"><%= link_to recommended_user_path(current_user) do %>
						<i class="icon-star icon-large"></i>
						<% end %>
					</li>
					<li class="menu_icon"><%= link_to filters_path do %>
						<i class="icon-cog icon-large <%= current_user.filters_enabled ? 'green' : '' %>"></i>
						<% end %>
					</li>
				</ul>
				<% end %>
				<ul class="nav pull-right">
					<% if current_user %>
						<li><%= link_to "Home",	current_user %></li>
						<li><%= link_to "Blogroll", blogs_path %></li>
						<li><%= link_to "Sign out", signout_path %></li>
					<% else %>
						<li><%= link_to "Blogroll", blogs_path %></li>
						<li><%= link_to "Sign In", "auth/facebook" %></li>
					<% end %>
				</ul>
			</nav>
		</div>
	</div>
</header>