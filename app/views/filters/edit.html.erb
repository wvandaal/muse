<% provide(:title, "Edit Filter") %>
<h1 class="banner"><div class="container">Filters</div></h1>
<div class="container" id="inner">
	<div class="well">
		<h2><%= "Edit '#{@filter.name}'" %></h2>
		<div class="row">
			<div class="span6 offset3">
				<%= form_for(@filter) do |f| %>
					<span class="label form-header">Basic Information</span>
					<div class="row">
						<div class="span3">
							<span class="label background-blue form-label">Name Your Filter</span>
						</div>
						<div class="span3">
							<%= f.text_field :name %>
						</div>
					</div>
					<div class="row">
						<div class="span3">
							<span class="label background-blue form-label">Include/Exclude</span>
						</div>
						<div class="span3">
							<%= f.select :inclusive, [['Include', true],['Exclude', false]] %>
						</div>
					</div>
					<span class="label form-header">Track Details</span>
					<div class="row">
						<div class="span3">
							<span class="label background-blue form-label">Artist</span>
						</div>
						<div class="span3">
							<%= f.text_field :artist %>
						</div>
					</div>
					<div class="row">
						<div class="span3">
							<span class="label background-blue form-label">Genre</span>
						</div>
						<div class="span3">
							<%= f.text_field :genre %>
						</div>
					</div>
					<span class="label form-header">Likes</span>
					<div class="row">
						<div class="span3">
							<span class="label background-blue form-label">Minimum Likes</span>
						</div>
						<div class="span3">
							<%= f.number_field :likes_min, :style => "height: 27px;" %>
						</div>
					</div>
					<div class="row">
						<div class="span3">
							<span class="label background-blue form-label">Maximum Likes</span>
						</div>
						<div class="span3">
							<%= f.number_field :likes_max, :style => "height: 27px;" %>
						</div>
					</div>
					<span class="label form-header">Dislikes</span>
					<div class="row">
						<div class="span3">
							<span class="label background-blue form-label">Minimum Dislikes</span>
						</div>
						<div class="span3">
							<%= f.number_field :dislikes_min, :style => "height: 27px;" %>
						</div>
					</div>
					<div class="row">
						<div class="span3">
							<span class="label background-blue form-label">Maximum Dislikes</span>
						</div>
						<div class="span3">
							<%= f.number_field :dislikes_max, :style => "height: 27px;" %>
						</div>
					</div>
					<span class="label form-header">Favorites</span>
					<div class="row">
						<div class="span3">
							<span class="label background-blue form-label">Minimum Favorites</span>
						</div>
						<div class="span3">
							<%= f.number_field :favorites_min, :style => "height: 27px;" %>
						</div>
					</div>
					<div class="row">
						<div class="span3">
							<span class="label background-blue form-label">Maximum Favorites</span>
						</div>
						<div class="span3">
							<%= f.number_field :favorites_max, :style => "height: 27px;" %>
						</div>
					</div>					
					<%= link_to "Delete Filter", filter_path(@filter), class: "btn btn-large btn-danger pull-left", method: :delete %>
					<%= f.submit "Save changes", class: "btn btn-large btn-primary pull-right" %> 
				<% end %>
			</div>
		</div>
	</div>
</div>